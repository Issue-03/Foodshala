<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<div class="container-fluid register-wrapper">
  <div class="row">
    <!-- What you get part for users -->
    <div class="col-12 col-lg-6 py-3">
      <h4>What you get?</h4>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="/images/cars2.png" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>LIMITED TIME OFFER</h5>
              <p>50% OFF on first five orders.</p>
            </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/bg-2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>LIMITED TIME OFFER</h5>
              <p>50% OFF on first five orders.</p>
            </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/bg-3.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>LIMITED TIME OFFER</h5>
              <p>50% OFF on first five orders.</p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <!-- Register form for Users -->
    <div class="col-12 col-lg-6 py-3 px-5">
      <h4>Register Your Account</h4>
      <%- include('partials/error_msg.ejs') %>
      <form class="user-form py-2" action="/register_user" method="POST">
        <!-- Full Name input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Full Name</label>
          <div class="col-md-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">account_box</i></div>
              </div>
              <input name="name" placeholder="Enter your name" class="form-control" type="text" required>
            </div>
          </div>
        </div>
        <!-- Email input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Email</label>
          <div class="col-md-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">email</i></div>
              </div>
              <input name="email" placeholder="Enter your email" class="form-control" type="email" required>
            </div>
          </div>
        </div>
        <!-- Password input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Password</label>
          <div class="col-md-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">vpn_key</i></div>
              </div>
              <input name="password" placeholder="Password" class="form-control" type="password" required>
            </div>
          </div>
        </div>
        <!-- Preference Input -->
        <div class="form-group">
          <label class="col-md-10 control-label">Preference(Veg/Non-Veg) </label>
          <div class="col-md-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">menu_book</i></div>
              </div>
              <select name="preference" class="form-control" required>
                <option value="">Select your choice</option>
                <option>Vegeterian</option>
                <option>Non-Vegeterian</option>
              </select>
            </div>
          </div>
        </div>
        <!-- Contact input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Contact No.</label>
          <div class="col-md-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">stay_primary_portrait</i></div>
              </div>
              <input name="contact" placeholder="Enter your phone number" class="form-control" type="text" required>
            </div>
          </div>
        </div>
        <!-- Submit Button -->
        <div class="form-group text-center">
          <label class="col-md-10 control-label"></label>
          <div class="col-md-10">
            <button type="submit" class="btn btn-success">Register</button>
          </div>
        </div>
      </form>
    </div>
  </div>

</div>

<%- include('partials/footer.ejs') %>