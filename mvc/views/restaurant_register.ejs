<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<div class="container-fluid register-wrapper">
  <div class="row">
    <!-- What you get part for restaurant -->
    <div class="col-12 col-lg-6 py-3">
      <h4>What you get?</h4>
      <!-- Carousels -->
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="/images/bg-1.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>CUSTOMERS</h5>
              <p>You will get all of our users</p>
            </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/bg-2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>LIMITED TIME OFFER</h5>
              <p>Register today and get excited offers</p>
            </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/bg-3.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>DELIVERY THROUGH US</h5>
              <p>No more barriers between you and your customers.</p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <!-- Register form for restaurant -->
    <div class="col-12 col-lg-6 py-3 px-5">
      <h4>Register Your Restaurant With Us</h4>
      <form class="rest-form py-2" action="/register_restaurant" method="POST">
      <%- include('partials/error_msg.ejs') %>
        <!-- Owner name input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Owner Name</label>
          <div class="col-md-10 inputGroupContainer">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">account_box</i></div>
              </div>
              <input name="name" placeholder="Enter owner name" class="form-control" type="text" required>
            </div>
          </div>
        </div>
        <!-- Restaurant name input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Restaurant Name</label>
          <div class="col-md-10 inputGroupContainer">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">storefront</i></div>
              </div>
              <input name="restaurant_name" placeholder="Enter restaurant name" class="form-control" type="text"
                required>
            </div>
          </div>
        </div>
        <!-- Email input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Email</label>
          <div class="col-md-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">email</i></div>
              </div>
              <input name="email" placeholder="Enter your email" class="form-control" type="email" required>
            </div>
          </div>
        </div>
        <!-- Password input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Password</label>
          <div class="col-md-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">vpn_key</i></div>
              </div>
              <input name="password" placeholder="Enter the password" class="form-control" type="password" required>
            </div>
          </div>
        </div>
        <!-- Contact input-->
        <div class="form-group">
          <label class="col-md-10 control-label">Contact No.</label>
          <div class="col-md-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="material-icons">stay_primary_portrait</i></div>
              </div>
              <input name="contact" placeholder="Enter your phone number" class="form-control" type="text" required>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group text-center">
          <label class="col-md-10 control-label"></label>
          <div class="col-md-10">
            <button type="submit" class="btn btn-warning">Register</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>